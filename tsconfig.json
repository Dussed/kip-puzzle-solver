{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "types": [
      "node"
    ],
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "exclude": [
    "node_modules"
  ]
}
